---
interface Props {
  class?: string
}
const { class: className } = Astro.props
---

<form
  action=""
  method="post"
  class:list={["px-8", "pt-6", "pb-8", "mb-4", className]}
>
  <p class="hidden">
    <label for="extra_field"
      >Extra (don't fill out if you're human)</label
    >
    <input name="extra_field" id="extra_field" />
  </p>

  <input
    id="contact-email"
    name="email"
    type="email"
    autocomplete="email"
    required={true}
    class="
      w-full
      px-5
      py-3
      border border-gray-300
      shadow-sm
      placeholder-gray-400
      focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500
      rounded-md
    "
    placeholder="Enter your email"
  />
  <textarea
    id="contact-message"
    name="message"
    required={true}
    class="
      w-full
      mt-3
      px-5
      py-3
      border border-gray-300
      shadow-sm
      placeholder-gray-400
      focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500
      rounded-md
    "
    placeholder="Your message"
  />
  <div class="mt-3 rounded-md shadow sm:flex-shrink-0">
    <button
      type="submit"
      class="
        w-full
        flex
        items-center
        justify-center
        mt-3
        py-3
        px-5
        border border-transparent
        text-base
        font-medium
        rounded-md
        text-white
        bg-indigo-600
        hover:bg-indigo-700
        focus:outline-none
        focus:ring-2
        focus:ring-offset-2
        focus:ring-indigo-500
      "
    >
      Subscribe
    </button>
  </div>
</form>
