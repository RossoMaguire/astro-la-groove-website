---
import { format } from 'date-fns'

export interface Props {
  post: any;
}
const { post } = Astro.props

const displayDate = (post) => {
  return format(post.date, "PP")
}
---

<div>
  <p class="text-sm text-gray-500">
    <time datetime="2020-03-16">{displayDate(post)}</time>
  </p>
  <a href={post.href} class="mt-2 block">
    <p class="text-xl font-semibold text-gray-900">{post.title}</p>
    <p class="mt-3 text-base text-gray-500">{post.description}</p>
  </a>
  <div class="mt-3">
    <a
      href={post.href}
      class="text-base font-semibold text-indigo-600 hover:text-indigo-500"
    >Read more</a>
  </div>
</div>
